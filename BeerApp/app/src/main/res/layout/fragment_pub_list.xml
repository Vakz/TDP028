<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.PubListFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#89959eaa"
        android:layout_marginBottom="10dp"
        />
    <se.liu.student.frejo105.beerapp.views.PlaceholderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:id="@+id/pubs_serving_header"
        custom:pre="@string/pubs_serving_header"
        android:text="@string/pubs_serving_header"/>
    <ListView
        android:id="@+id/pub_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView

        android:id="@+id/no_pub_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_pub_in_radius"/>
</LinearLayout>