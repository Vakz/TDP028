<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="5"
        android:contentDescription="@string/thumbnail"
        android:id="@+id/beer_item_thumbnail"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beer_item_name"
            android:layout_marginEnd="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beer_item_type"
                android:layout_weight="1"/>
            <Button
                android:focusable="false"
                android:id="@+id/tested_button"
                android:layout_height="23dp"
                android:layout_width="match_parent"
                android:text="@string/untested"
                android:layout_margin="0dp"
                android:textScaleX="0.4"
                android:background="#ff4a4a"
                android:textColor="#ffffff"
                android:layout_gravity="end"
                android:layout_weight="4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beer_item_brewery"/>
    </LinearLayout>


</LinearLayout>